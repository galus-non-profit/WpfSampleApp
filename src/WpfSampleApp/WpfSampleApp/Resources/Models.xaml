<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:WpfSampleApp.Models">
    <DataTemplate x:Key="UserViewTemplate" DataType="{x:Type m:User}">
        <StackPanel>
            <Label Content="{DynamicResource LastNameLabel}"></Label>
            <TextBlock FontWeight="Heavy" Text="{Binding LastName}"/>
            <TextBlock Text="{Binding FirstName}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>